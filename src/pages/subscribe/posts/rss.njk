---
permalink: subscribe/posts/rss.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="/subscribe/styles/rss.xsl" type="text/xsl"?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xml:base="https://rknight.me" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Robb Knight • Posts • RSS Feed</title>
    <link rel="self">https://rknight.me{{permalink}}</link>
    <description>Maker of web things, Lego builder, sometimes blogger, sporadic pizzaiolo, fortnightly podcaster. Cat dad and human dad.</description>
    <language>en-gb</language>
    {%- for post in collections.postsForFeed %}
    {% set absolutePostUrl %}{{ post.url | url | absoluteUrl(metadata.url) }}{% endset %}
      <item>
        <title>{{ post.data.title }}</title>
        <link>https://rknight.me{{ post.url }}</link>
        <excerpt>{{ post.data.excerpt }}</excerpt>
        <description>{{ post.templateContent | htmlToAbsoluteUrls(absolutePostUrl) | rssClubAlert(post.data.rssClub) }}</description>
        <pubDate>{{ post.date | dateToRfc822 }}</pubDate>
        <dc:creator>Robb Knight</dc:creator>
        <guid>https://rknight.me{{ post | getRssId }}</guid>
      </item>
    {%- endfor %}
  </channel>
</rss>
