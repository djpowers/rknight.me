<style>
    .statuslol_container {
        background-color: white;
        border: 2px solid var(--body-text);
        box-shadow: 3px 3px var(--body-text);
        padding: 10px;
        margin-bottom: 10px;
        font-size: 16px;
    }

    .statuslol {
        display: flex;
    }

    .statuslol p {
        margin-bottom: 0;
    }

    .statuslol_content {
        display: flex;
        font-style: italic;
    }

    .statuslol_emoji_container {
        display: flex;
        align-items: center;
        margin-right: 5px;
    }

    .statuslol_emoji_container img {
        width: 20px;
        height: 20px;
    }

    .statuslol_time {
        margin-left: 5px;
        font-style: normal;
    }

    .statuslol_time:after {
        content: ' on status.lol'
    }
</style>

<div class="statuslol_container">
    <div class="statuslol" style="">
        <div class="statuslol_emoji_container">
            <div>{{ statuslol[0].emoji }}</div>
        </div>
        <div class="statuslol_content">
            <p>{{ statuslol[0].content }}</p>
            <div class="statuslol_time">
                <a style="" href="https://robb.status.lol/{{ statuslol[0].id }}">{{ statuslol[0].relative_time }}</a>
            </div>
        </div>
    </div>
</div>

<div class="projects">
	{%- for project in projects %}
		{% if project.ignore != true %}
		<div class="project {{ project.key }} {{ project.class }}">
			<div class="project-image" {% if project.color %}style="background-color: {{ project.color }}"{% endif %}>
				<img src="/assets/img/{{ project.key }}.{{ project.type }}" alt="{{ project.alt }}">
			</div>
			<h2><a href="{{ project.url }}">{{ project.name }}</a></h2>
			<p>{{ project.desc | safe }}</p>
		</div>
		{%  endif  %}
	{% endfor %}
</div>

<section class="box">
	<h3 class="heading-medium">üóíÔ∏è <a href="/blog">Long Posts</a></h2>

	<ul class="no-bull">
		{%- for post in collections.firstPosts %}
		  <li>
		  	<span class="post-date">{{ post.data.date | isoDateOnly }}</span> <a href="{{ post.data.permalink | stripIndex }}">{{ post.data.title }}</a>

		  	<br>

		  	<span class="post-excerpt">{{ post.data.excerpt }}</span>
		  </li>
		{% endfor %}
	</ul>

	<h3>üé∫ <a href="https://toot.rknight.me/">Short Posts</a></h3>
	<div class="microblog-posts">
	{%- for post in micro.posts %}
		<div class="microblog-post">
			{% if post.title %}
				<p><a class="post-date" href="{{ post.url }}">{{ post.date }}</a> {{ post.title }}</p>
			{% else %}
				<p><a class="post-date" href="{{ post.url }}">{{ post.date }}</a> {{ post.summary | safe }}</p>
			{% endif %}
		</div>
	{% endfor %}
	</div>

