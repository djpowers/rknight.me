<section class="box" style="padding: 15px 15px 25px 15px;position: relative;">
	<h3 class="home"><svg class="icon"><use xlink:href="#chat"></use></svg>Latest Toot</h3>

	{%- for post in micro.posts.slice(0, 1) %}
		{% if post.spoiler %}
			<details>
				<summary>{{ post.spoiler }} <strong>(spoilers)</strong></summary>
				{% include 'micropost_data.njk' %}
			</details>
		{% else %}
			{% include 'micropost_data.njk' %}
		{% endif %}
		<div class="post-date" style="position: absolute; bottom: 15px; right: 15px; margin-bottom: 0;">
			<a target="_blank" rel="noopener" href="{% if post.source %}{{ post.source }}{% else %}{{ post.path | postPath | stripIndex }}{% endif %}">{{ post.date | toDateTime }}</a>
			<a href="{{ post.path | postPath | stripIndex }}">&infin;</a>
		</div>
	{% endfor %}
</section>

