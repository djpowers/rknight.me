<section class="box">
	<h3 class="heading-medium">üóíÔ∏è <a href="/blog">Long Posts</a></h2>

	<ul class="no-bull">
		{%- for post in collections.firstPosts %}
		  <li>
		  	<span class="post-date">{{ post.data.date | isoDateOnly }}</span> <a href="{{ post.data.permalink | stripIndex }}">{{ post.data.title }}</a>

		  	<br>

		  	<span class="post-excerpt">{{ post.data.excerpt }}</span>
		  </li>
		{% endfor %}
	</ul>

	<h3>üé∫ <a href="https://toot.rknight.me/">Short Posts</a></h3>
	<div class="microblog-posts">
	{%- for post in before.posts %}
		<div class="microblog-post">
			{% if post.title %}
				<p><a class="post-date" href="{{ post.url }}">{{ post.date }}</a> {{ post.title }}</p>
			{% else %}
				<p><a class="post-date" href="{{ post.url }}">{{ post.date }}</a> {{ post.summary | safe }}</p>
			{% endif %}
		</div>
	{% endfor %}
	</div>

	<h3>üì∑ <a href="https://toot.rknight.me/photos">Latest Photos<a></h3>
	<div class="microblog-photos">
		{%- for photo in before.photos %}
			<div class="microblog-photo"><a href="{{ photo.url }}"><img src="{{ photo.image }}" alt="{{ photo.alt }}"></a></div>
		{%  endfor %}
	</div>

	<h3>üçø <a href="https://toot.rknight.me/categories/movies">Recently Watched<a></h3>
	<div class="microblog-posts">
        <ul>
        {%- for watched in before.watched %}
            <li><a class="post-date" href="{{ watched.link }}">{{ watched.date }}</a> {{ watched.title }}</li>
        {% endfor %}
        </ul>
	</div>

    <div class="the-claw" style="margin: 0 auto;">
        <script src="https://the-claw-webring-widget.netlify.app/the-claw-webring-widget.mjs" type="module"></script>
        <the-claw-webring-widget theme="light">
            <!-- TO DO ADD FALLBACK CONTENT -->
        </the-claw-webring-widget>
    </div>
</section>

<div class="projects">
	{%- for project in projects %}
		{% if project.ignore != true %}
		<div class="project {{ project.key }} {{ project.class }}">
			<div class="project-image" {% if project.color %}style="background-color: {{ project.color }}"{% endif %}>
				<img src="/assets/img/{{ project.key }}.{{ project.type }}" alt="{{ project.alt }}">
			</div>
			<h2><a href="{{ project.url }}">{{ project.name }}</a></h2>
			<p>{{ project.desc | safe }}</p>
		</div>
		{%  endif  %}
	{% endfor %}
</div>
