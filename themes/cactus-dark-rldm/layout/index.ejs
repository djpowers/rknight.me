<section id="about">
    <p>I'm lead developer at <a href="http://radweb.co.uk">Radweb</a> working on <a href="http://inventorybase.com">InventoryBase</a> and other products, a founding member of <a href="http://devsdodesign.com">#DevsDoDesign</a>, an award winning hackathon team, and I do <a href="http://ruminatepodcast.com">a podcast</a> with <a href="http://johnvoorhees.co">John Voorhees</a>.</p>
  <p style="display: inline">
    <% if (theme.customize.social_links) { %>
      Find me on
      <ul id="sociallinks">
        <% for(var i in theme.customize.social_links) { %>
          <li><a class="icon" target="_blank" href="<%- url_for(theme.customize.social_links[i]) %>" title="<%= i %>"><i class="fa fa-<%= i %>"></i></a></li>
        <% } %>
      </ul>.
    <% } %>
  </p>
</section>

<section id="writing">
  <span class="h1"><a href="<%- url_for("blog") %>">Writing</a></span>
  <ul class="post-list">
    <% if (theme.customize.show_all_posts) { %>
      <% var show_posts = page.posts.sort('date', 'desc') %>
    <% } else { %>
      <% var show_posts = site.posts.sort('date', 'desc').limit(theme.customize.post_count || 5) %>
    <% } %>
    <% show_posts.each(function(post, i){ %>
      <li class="post-item">
        <%- partial('_partial/post/date', { post: post, class_name: 'meta' }) %>
        <span><%- partial('_partial/post/title', { post: post, index: true, class_name: '' }) %></span>
      </li>
    <% }); %>
  </ul>
  <% if (theme.customize.show_all_posts) { %>
    <%- partial('_partial/pagination') %>
  <% } %>
</section>

<% if (site.data.projects) { %>
<section id="projects">
  <span class="h1"><a href="<%- url_for("projects") %>">Projects</a></span>
  <ul class="project-list">
    <% for(var obj in site.data.projects){ %>
      <% if (site.data.projects[obj].featured) { %>
        <li class="project-item">
          <a href="<%= site.data.projects[obj].url %>"><%= site.data.projects[obj].name %></a>: <%- site.data.projects[obj].desc %>
        </li>
      <% } %>
    <% } %>
  </ul>
</section>
<% } %>

<% if (site.data.social) { %>
<section id="projects">
  <span class="h1">Social</span>
  <ul class="project-list">
    <% for(var obj in site.data.social){ %>
      <li class="project-item">
        <% if (site.data.social[obj].url) { %>
          <a href="<%= site.data.social[obj].url %>"><%= site.data.social[obj].name %></a>: <%- site.data.social[obj].desc %>
        <% } else { %>
          <%- site.data.social[obj].name %>: <%- site.data.social[obj].desc %>
        <% } %>
      </li>
    <% } %>
  </ul>
</section>
<% } %>