<div style="margin-bottom: 10px;" data-pagefind-body>
    {% if post.title %}
        <h2>{{ post.title }}</h2>
    {% endif %}

    <div class="post-date">
        {{ post.date | toDateTime }}
        {% if post.tags.length > 0 %}
            {% for tag in post.tags %}
                #<a href="/tags/{{ tag | slug }}">{{ tag }}</a>
            {% endfor %}
        {% endif %}
    </div>

    {% if post.spoiler %}
        <details>
            <summary>{{ post.spoiler }} <strong>(spoilers)</strong></summary>
            {% include 'micropost_data.njk' %}
        </details>
    {% else %}
        {% include 'micropost_data.njk' %}
    {% endif %}

    <div style="font-size: 0.8em; text-align: right;margin-top: 10px;">
        {% if post.source %}
            <a target="_blank" rel="noopener" href="{{ post.source }}">{{ post.source }}</a>
        {% endif %}
        <a href="{{ post.path | postPath | stripIndex }}">&infin;</a>
    </div>
</div>
