---
pagination:
  data: micro.posts
  size: 20
  alias: post
permalink: 'micro/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}/{% endif %}'
layout: base
eleventyComputed:
    title: Microblog
    subtitle: This is a mirror of my [Mastodon feed](https://social.lol/@robb) as well as my previous posts from micro.blog.
---

  <ul>
      <li><a href="/micro/tags">Tags</a></li>
      <li><a href="/micro/photos">Photos</a></li>
      <li><a href="/micro/boosts">Boosted Links</a></li>
      <li><a href="/micro/adn">App.net archive</a></li>
  </ul>

  <div class="pagination">
      <div>{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Newer Posts</a>{% else %}Newer Posts{% endif %}</div>
      <div>{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Older Posts</a>{% else %}Older Posts{% endif %}</div>
  </div>

{%- for post in pagination.items %}
    {% include 'micropost.njk' %}
{% endfor -%}

<div class="pagination box">
    <div>{% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">Newer Posts</a>{% else %}Newer Posts{% endif %}</div>
    <div>{% if pagination.href.next %}<a href="{{ pagination.href.next }}">Older Posts</a>{% else %}Older Posts{% endif %}</div>
</div>
