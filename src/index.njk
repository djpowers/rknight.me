	{%- for post in micro.posts %}
		<div class="microblog-post">
			<p class="post-date"><a href="{{ post.url }}">{{ post.date }}</a></p>
			{% if post.title %}
				<p><a href="{{ post.url }}">{{ post.title }}</a></p>
			{% else %}
				{{ post.html | safe }}
			{% endif %}
		</div>
	{% endfor %}
