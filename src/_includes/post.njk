<img style="display:none" class="u-photo" src="/assets/indieweb/avatar.jpg" alt="Robb Knight's avatar">

<span class="post e-content" data-pagefind-body>
    {% if rssClub or note %}
        <aside class="alert">
            {% if rssClub %}
                <div class="rss-club">
                    <svg class="icon subscribe-icon">
                        <use xlink:href="#rss"></use>
                    </svg>
                </div>
                <p>Welcome to the Knight club - RSS-only posts. <a href="https://daverupert.com/rss-club/">Read more about RSS club</a>.</p>
            {% endif %}
            {% if note %}
                <p>{{ note | safe }}</p>
            {% endif %}
        </aside>
    {% endif %}
	{{ content | safe }}
</span>

