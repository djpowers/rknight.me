<div class="microblog-post" style="margin-bottom: 20px;font-size:0.9em" data-pagefind-body>
    {% if post.title %}
        <h2>{{ post.title }}</h2>
    {% endif %}

    {% if post.spoiler %}
        <details>
            <summary>{{ post.spoiler }} <strong>(spoilers)</strong></summary>
            {% include 'micropost_data.njk' %}
        </details>
    {% else %}
        {% include 'micropost_data.njk' %}
    {% endif %}

    <div class="post-date">
        {% if post.tags.length > 0 %}
            {% for tag in post.tags %}
                #<a href="/micro/tags/{{ tag | slug }}">{{ tag }}</a>
            {% endfor %}
        {% endif %}
        <a target="_blank" rel="noopener" href="
            {% if post.source %}{{ post.source }}{% else %}{{ post.path | postPath | stripIndex }}{% endif %}
        ">{{ post.date | toDateTime }}</a>
        <a href="{{ post.path | postPath | stripIndex }}">&infin;</a>
    </div>
</div>
